<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1635469564262-7528083b071b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1450&q=80);">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <%= link_to "Create list", new_list_path, class: "btn btn-flat"  %>
  </div>
</div>

<div class="container">
  <div class="row text-center mt-4">
    <h2 style="font-weight: bold; color: #1e1e20">Browse through the lists</h2>
  </div>

  <div class="cards mb-5 mt-4">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://media.sproutsocial.com/uploads/2017/02/10x-featured-social-media-image-size.png' %>)">          <%= link_to "#{list.name}", list_path(list), class: "remove-link-decoration"  %>
      </div>
    <% end %>
  </div>
</div>
